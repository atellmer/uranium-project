@import '../../node_modules/nib/'

//material colors
$dark-primary-color = #512DA8;
$primary-color = #673AB7; 
$light-primary-color = #D1C4E9;
$accent-color = #FF4081;
$primary-text-color = #212121;
$secondary-text-color = #727272;
$divider-color = #B6B6B6;
$bg-color = #FAFAFA;
$text-color = rgba(0,0,0,0.87);

//base height
$base-heihgt = 32px;

//helpers
.no-padding
	padding 0
	margin 0
	
.transition
	transition all .5s ease-in-out
	
.container-fluid
	padding 0
	background $bg-color

body
	font-family 'Roboto'
	font-smoothing antialiased
	overflow-scrolling touch

a, a:hover, a:active, a:focus
	outline none
	text-decoration none

.header-fixed
	position fixed
	width 100%
	z-index 9
	
.position-fixed
	position fixed
	
.md-sidenav-backdrop
	position fixed

.header
	background $primary-color
	height $base-heihgt * 2
	max-height $base-heihgt * 2
	@media screen and (max-width: 600px)
		height ($base-heihgt * 2) - 8
		max-height ($base-heihgt * 2) - 8
	
.logo
	height 46.6666px
	width 171.3333px
	background-image url(../../img/logo.png)
	background-size cover
	background-repeat no-repeat
	background-position center
	@media screen and (max-width: 960px)
		height 35px
		width 128.5px

.header__links
	display: flex;
	align-items: center;
	flex-direction: row;
	@media screen and (max-width: 600px)
		display none

.header-menu
	@extend .header
	background-color #FFF
	color $secondary-text-color
	text-transform uppercase
	letter-spacing 3px
	cursor default
	
.header-menu__content
	padding 8px 0 8px 0

.header-menu__item
	width 100%
	margin 0
	text-align left
	line-height 48px
	min-height 48px
	padding 0 20px 0 20px;
	text-transform uppercase
	font-weight 500
	transition all .3s ease-in-out
	color $text-color
	overflow hidden
	display flex
	letter-spacing .010em
	user-select: none;
	
.header-menu__item:hover
	background-color rgba(0,0,0,0.075)
	transition all .3s ease-in-out
	
.logo--black
	background-image url(../../img/logo-black.png)
	
.social
	padding 8px
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content space-between 
	
.social__btn
	width 40px
	height 40px
	margin 8px
	border-radius 100%
	cursor pointer
	background-size cover
	background-repeat no-repeat
	background-position center
	transition all .3s ease-in-out
	
.social__btn:hover
	background-size cover
	background-repeat no-repeat
	background-position center
	transition all .3s ease-in-out
	
.social__btn--vk
	background-image url(../../img/social/vk-b.png)

.social__btn--vk:hover
	background-image url(../../img/social/vk.png)
	
.social__btn--ok
	background-image url(../../img/social/ok-b.png)
	
.social__btn--ok:hover
	background-image url(../../img/social/ok.png)
	
.social__btn--fb
	background-image url(../../img/social/fb-b.png)
	
.social__btn--fb:hover
	background-image url(../../img/social/fb.png)
	
.social__btn--tw
	background-image url(../../img/social/tw-b.png)
	
.social__btn--tw:hover
	background-image url(../../img/social/tw.png)

.container
	padding-bottom $base-heihgt
	padding-top ($base-heihgt * 2) + 8
	@media screen and (max-width: 600px)
		padding-top ($base-heihgt * 2)
		
.md-primary
	color $accent-color!important

