@import '../../node_modules/nib/'
@import '../fonts/fonts.css'


//material colors
$dark-primary-color = #512DA8;
$primary-color = #673AB7; 
$light-primary-color = #D1C4E9;
$accent-color = #FF4081;
$primary-text-color = #212121;
$secondary-text-color = #727272;
$divider-color = #B6B6B6;
$bg-color = #FAFAFA;
$text-color = rgba(0,0,0,0.87);

//base height
$base-heihgt = 32px;

//helpers
.no-padding
	padding 0
	margin 0
	
.paper-shadow-z1
	box-shadow 0 1px 6px rgba(0,0,0,0.12), 0 1px 4px rgba(0,0,0,0.12)
	
.paper-shadow-z2
	box-shadow 0 3px 10px rgba(0,0,0,0.16), 0 3px 10px rgba(0,0,0,0.23)
	
.paper-shadow-z3
	box-shadow 0 10px 30px rgba(0,0,0,0.19), 0 6px 10px rgba(0,0,0,0.23)
	
.paper-shadow-z4
	box-shadow 0 14px 45px rgba(0,0,0,0.25), 0 10px 18px rgba(0,0,0,0.22)
	
.paper-shadow-z5
	box-shadow 0 19px 60px rgba(0,0,0,0.3), 0 15px 20px rgba(0,0,0,0.22)
	
.line-clamp
	overflow hidden
	display -webkit-box
	-webkit-line-clamp 10
	-webkit-box-orient vertical
	text-overflow: ellipsis;

body
	background $bg-color
	font-family 'Roboto'
	font-smoothing antialiased
	overflow-scrolling touch

a, a:hover, a:active, a:focus
	outline none
	text-decoration none

.container-fluid
	background $bg-color
	padding 0
	
.header-fixed
	position fixed
	width 100%
	z-index 9
	
.position-fixed
	position fixed
	
.md-sidenav-backdrop
	position fixed

.header
	background $primary-color
	height $base-heihgt * 2
	max-height $base-heihgt * 2
	@media screen and (max-width: 600px)
		height ($base-heihgt * 2) - 8
		max-height ($base-heihgt * 2) - 8
	
.logo
	height 46.6666px
	width 171.3333px
	background-image url(../../img/logo.png)
	background-size cover
	background-repeat no-repeat
	background-position center
	@media screen and (max-width: 960px)
		height 35px
		width 128.5px

.header__links
	display: flex;
	align-items: center;
	flex-direction: row;
	@media screen and (max-width: 600px)
		display none

.header-menu
	@extend .header
	background-color #FFF
	color $secondary-text-color
	text-transform uppercase
	letter-spacing 3px
	cursor default
	
.logo--invert
	background-image url(../../img/logo-black.png)
	
.social
	padding 8px
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content space-between
	
.social__btn
	width 40px
	height 40px
	margin 8px
	border-radius 50%
	cursor pointer
	background-size cover
	background-repeat no-repeat
	background-position center
	transition all .3s ease-in-out
	
.social__btn:hover
	background-size cover
	background-repeat no-repeat
	background-position center
	transition all .3s ease-in-out
	
.social__btn--vk
	background-image url(../../img/social/vk-b.png)

.social__btn--vk:hover
	background-image url(../../img/social/vk.png)
	
.social__btn--ok
	background-image url(../../img/social/ok-b.png)
	
.social__btn--ok:hover
	background-image url(../../img/social/ok.png)
	
.social__btn--fb
	background-image url(../../img/social/fb-b.png)
	
.social__btn--fb:hover
	background-image url(../../img/social/fb.png)
	
.social__btn--tw
	background-image url(../../img/social/tw-b.png)
	
.social__btn--tw:hover
	background-image url(../../img/social/tw.png)

.container
	padding-bottom $base-heihgt
	padding-top ($base-heihgt * 2) + 8
	@media screen and (max-width: 600px)
		padding-top ($base-heihgt * 2)
		
.card
	display block
	transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms;
	
.card:hover
	@extend .paper-shadow-z3
	
.card__action
	padding 8px
		
.md-primary
	color $accent-color!important

.card__anonce
	max-height 13em
	@extend .line-clamp
